<main class="loginform">
    <h1>Register</h1>
    {{#if messages}}
        <p class="alert alert-danger">
            {{messages}}
        </p>
    {{else}}
        <p class="alert alert-warning">
            Please create your account
        </p>
    {{/if}}

    <form method="post">
        <fieldset class="form-group">
            <label for="username" class="col-2 control-label">Username: *</label>
            <input name="username" id="username" required type="email" placeholder="email@email.com" />
        </fieldset>
        <fieldset class="form-group">
            <label for="password" class="col-2 control-label">Password: *</label>
            <input name="password" id="password" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"/>
            <img src="/images/show.png" alt="show-hide" id="imgShowHide" onclick="showHide()"/>
        </fieldset>
        <fieldset class="form-group">
            <label for="confirm" class="col-2 control-label">Confirm: *</label>
            <input name="confirm" id="confirm" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  onkeyup="return comparePasswords();" />
             <span id="pwMsg"></span>
        </fieldset>
        <fieldset class="form-group">
            <button onclick="return comparePasswords();" class="button-89" role="button">Register</button>
            <hr />
            Already have an account? <a href="/auth/login" title="Login">Login</a>
            
        </fieldset>
    </form>
</main>