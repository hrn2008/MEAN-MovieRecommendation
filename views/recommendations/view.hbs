<div class="view card">
    <div class="card-body">
        <h5 class="card-title">Movie: {{ recommendation.name }}</h5>
        <p class="card-text">Genre: {{ recommendation.genre }}</p>
        <p class="card-text">Year: {{ recommendation.year }}</p>
        <p class="card-text">Summary: {{ recommendation.summary}}</p>

        <button onclick="window.location.href='/comments/create/{{ recommendation._id }}';" class="button-48" role="button"><span class="text">Add Comment</span></button>

        <button onclick="window.location.href='/recommendations/edit/{{ recommendation._id }}';" class="button-48" role="button"><span class="text">Edit</span></button>

        <button onclick="window.location.href='/recommendations/delete/{{ recommendation._id }}';" class="button-48" role="button"><span class="text">Delete</span></button>
                                
