        <a href="/recommendations/delete/{{ recommendation._id }}" class="btn btn-danger">Delete</a> --}}
    </div>
</div>
    <div class="ViewComments">
        <h2>Comments</h2>
            {{#each comments}}
            <div class="view card">
                <div class="card-body">
                    {{this.desc}}
